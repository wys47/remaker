<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="toolbarStyle">
        <item name="android:layout_height">70dp</item>
        <item name="android:background">@color/colorPrimary</item>
    </style>
    <style name="mainContextStyle">
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:background">@color/white</item>
        <item name="android:orientation">vertical</item>
        <item name="android:padding">5dp</item>
    </style>
    <style name="navigationBarStyle">
        <item name="android:layout_height">70dp</item>
        <item name="android:background">@color/colorSecondary</item>
        <item name="android:orientation">horizontal</item>
    </style>

    <style name="textBigStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">28dp</item>
        <item name="android:textColor">@color/black</item>
    </style>
    <style name="textNormalStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">24dp</item>
        <item name="android:textColor">@color/black</item>
    </style>
    <style name="buttonStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">20dp</item>
        <item name="android:backgroundTint">@color/grey0</item>
    </style>
    <style name="buttonClickedStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">20dp</item>
        <item name="android:backgroundTint">@color/grey2</item>
    </style>

    <style name="devideLine">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">5dp</item>
        <item name="android:background">@color/grey1</item>
    </style>
</resources>